<Window x:Class="IndividualWPF22._11._18._3._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndividualWPF22._11._18._3._2"
        mc:Ignorable="d"
        Title="Series calculator" 
        Height="220" Width="380"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">
        <StackPanel>
        <WrapPanel Margin="10">
            <Image Source="/ninek.png" Height="40"/>
            <!--<GroupBox Header="Parameters" Width="164">-->
            <Label Content="x" VerticalAlignment="Center"/>
            <TextBox Text="0,00" Width="46" VerticalAlignment="Center" Name="PerX"/>
            <Label Content="N" VerticalAlignment="Center"/>
            <TextBox Text="0,00" Width="46" VerticalAlignment="Center" Name="PerN"/>
            <Label Content="K" VerticalAlignment="Center"/>
            <TextBox Text="0,00" Width="46" VerticalAlignment="Center" Name="PerK"/>
            <!--</GroupBox>-->
        </WrapPanel>
        <Button x:Name="ButtonCalc" Content="Вычислить" Height="30" Width="100" HorizontalAlignment="Center" Margin="20" Click="ButtonCalc_Click"/>
    </StackPanel>

</Window>
